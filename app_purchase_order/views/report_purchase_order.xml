        <template id="report_bona">
    <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="doc">
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
      
            </div>

            <h2 t-if="doc.state != 'draft'">Commande fournisseur #<span t-field="doc.name"/></h2>
            <h2 t-if="doc.state == 'draft'">Request for Quotation #<span t-field="doc.name"/></h2>

            <div class="row mt32 mb32">
                <div t-if="doc.name" class="col-xs-3">
                    <strong>Reference de la commande:</strong>
                    <p t-field="doc.name"/>
                </div>
                <div t-if="doc.partner_ref" class="col-xs-3">
                    <strong>Your Order Reference:</strong>
                    <p t-field="doc.partner_ref"/>
                </div>
                <div t-if="doc.date_order" class="col-xs-3">
                    <strong>Order Date:</strong>
                    <p t-field="doc.date_order"/>
                </div>
            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Description</strong></th>
                        
                        <th class="text-center"><strong>Date Req.</strong></th>
                        <th class="text-right"><strong>Qty</strong></th>
                     
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="doc.order_line" t-as="line">
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        
                        <td class="text-center">
                            <span t-field="line.date_planned"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
               
                    </tr>
                </tbody>
            </table>

            <p t-field="doc.notes"/>
            <div class="oe_structure"/>
        </div>
    </t>
    </t>
</template>

