<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
  <!-- ############################## Add fields for logistic ################################################ -->
 <record model="ir.ui.view" id="view_order_purchase_line_form">
        <field name="name">purchase.order.line.formver.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
        <field name="partner_ref" position="after">
					
				</field>
        <xpath expr="//field[@name='order_line']/form/sheet/field[@name='state']" position="after">
         <field name="logistic" invisible="1"/>
        </xpath>
            <xpath expr="//field[@name='order_line']/form/sheet/group/group[2]/field[@name='date_planned']" position="after">
           
                <field name="location_dest_id" />
            </xpath> 
            <xpath
				expr="////field[@name='order_line']/tree/field[@name='product_qty']"
				position="attributes">
				<attribute name="sum">Total</attribute>
			</xpath>
			 
            <xpath expr="//field[@name='order_line']/tree/field[@name='state']" position="after">
         <field name="logistic" invisible="1"/>
        </xpath> 
        <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="after">
           
                <field name="location_dest_id" />
            </xpath>       
                <field name="partner_ref" position="after">
                <field name="semaine" attrs="{'invisible': [('logistic', '=', True)]}"/>
					<field name="abattage" attrs="{'invisible': [('logistic', '=', True)]}" />
					<field name="logistic" />
					<field name="data_file_cmr"
						attrs="{'invisible': [('logistic', '=', False)]}" />
				</field>
				<field name="date_order" position="after">
					<field name="qty_totals"
						attrs="{'invisible': [('logistic', '=', False)]}" />
					
					<field name="kilometre"
						attrs="{'invisible': [('logistic', '=', False)]}" />
					
					<field name="prix_transp" widget='monetary'
						attrs="{'invisible': [('logistic', '=', False)]}" />
					<field name="prix_par_km" widget='monetary'
						attrs="{'invisible': [('logistic', '=', False)]}" />
					<field name="prix_par_kg" widget='monetary'
						attrs="{'invisible': [('logistic', '=', False)]}" />

				</field>
				<xpath
					expr="//field[@name='order_line']/tree/field[@name='product_id']"
					position="before">
					<field name="image_small" widget="image" />
				</xpath>
				<field name="date_order" position="after">
					<field name="purchase_order_id"
						attrs="{'invisible': [('logistic', '=', False)]}" />
				</field>
            </field>
        </record>
       </data>
</odoo>
            