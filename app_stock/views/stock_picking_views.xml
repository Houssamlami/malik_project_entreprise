<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="add_box_stock_picking_form">
			<field name="name">add.box.stock.picking.form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">

				<xpath expr="//field[@name='move_lines']/tree/field[@name='product_uom_qty']"
					position="after">
					<field name="secondary_uom_qty" attrs="{'invisible': [('picking_code','!=','outgoing')]}"/>
					</xpath>
					<xpath expr="//field[@name='move_lines']/tree/field[@name='reserved_availability']"
					position="attributes">
					<attribute name="invisible">1</attribute>
					</xpath>
			</field>
		</record>
		<record model="ir.ui.view" id="add_date_refer_stock_production_lot">
			<field name="name">add.date.refer.stock.production.lot</field>
			<field name="model">stock.production.lot</field>
			<field name="inherit_id" ref="stock.view_production_lot_form" />
			<field name="arch" type="xml">

				<xpath expr="//group[@name='main_group']/group"
					position="inside">
					<field name="date_refer" />
					</xpath>
					</field>
					</record>
					<record model="ir.ui.view" id="add_date_reference_lot_stock_move_line">
			<field name="name">add_date_reference_lot_stock_move_line</field>
			<field name="model">stock.move.line</field>
			<field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
			<field name="arch" type="xml">

				<xpath expr="//field[@name='lot_name']"
					position="after">
					<field name="date_reference" />
					</xpath>
					</field>
					</record>
	</data>
</odoo>