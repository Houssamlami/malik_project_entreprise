<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_order_image_form_inherit" model="ir.ui.view">
			<field name="name">purchase.order.form.purchase.image</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
			<field name="arch" type="xml">
				<!--<xpath expr="//page[@string='Purchase Order Lines']/field[@name='order_line']/form[@string='Purchase 
					Order Lines']/group/group/field[@name='product_id']" position="before"> -->
				<!--<field name="image_small" widget="image"/> -->
				<!--</xpath> -->
				<field name="partner_ref" position="after">
					<field name="logistic" />
					<field name="data_file_cmr"
						attrs="{'invisible': [('logistic', '=', False)]}" />
				</field>
				<field name="date_order" position="after">
					<field name="qty_totals"
						attrs="{'invisible': [('logistic', '=', False)]}" />
					
					<field name="kilometre"
						attrs="{'invisible': [('logistic', '=', False)]}" />
					
					<field name="prix_transp" widget='monetary'
						attrs="{'invisible': [('logistic', '=', False)]}" />
					<field name="prix_par_km" widget='monetary'
						attrs="{'invisible': [('logistic', '=', False)]}" />
					<field name="prix_par_kg" widget='monetary'
						attrs="{'invisible': [('logistic', '=', False)]}" />

				</field>
				<xpath
					expr="//field[@name='order_line']/tree/field[@name='product_id']"
					position="before">
					<field name="image_small" widget="image" />
				</xpath>
				<field name="date_order" position="after">
					<field name="purchase_order_id"
						attrs="{'invisible': [('logistic', '=', False)]}" />
				</field>
				<!-- <field name="date_order" position="after"> <field name="print_image" 
					attrs="{'invisible': [('logistic', '=', True)]}"/> <field name="image_sizes" 
					attrs="{'invisible': [('logistic', '=', True)]}"/> </field> -->
			</field>
		</record>
	</data>
</odoo>