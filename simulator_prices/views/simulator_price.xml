<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<data>
		<record id="simulator_price_form" model="ir.ui.view">
			<field name="name">simulator.price.form</field>
			<field name="model">simulator.price</field>
			<field name="arch" type="xml">
			<form string="Simulation des prix">
			<sheet>
			
			<group>
			<group>
				
				<field name="name"/>
				<field name="prix_achat"/>
				<field name="prix_transport"/>
				<field name="cout_avs"/>
				<field name="cout_ttm"/>
				<field name="charge_fixe"/>
				
			</group>
			<group>
			<field name="cout_revient"/>
			<field name="marge"/>
			<field name="marge_securite"/>
			<field name="provision_commission"/>
			<field name="prix_min_vente"/>
			<field name="prix_vente_estime"/>
			</group>
			</group>
			
			</sheet>
			</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="simulator_price_tree_view">
			<field name="name">simulator.price.tree</field>
			<field name="model">simulator.price</field>
			<field name="arch" type="xml">
				<tree string="Simulateur des prix">
					<field name="name"/>
					<field name="prix_achat"/>
					<field name="cout_revient"/>
			       <field name="prix_min_vente"/>
					<field name="prix_vente_estime"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.actions.act_window"
			id="simulator_price_action">
			<field name="name">Simulateur</field>
			<field name="res_model">simulator.price</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>

		</record>
		
		<menuitem id="main_simulator_price_menu" name="Simulateur Prix/Couts" sequence="1"/>

		<menuitem id="simulator_price_menu" name="Simulateur" sequence="1"
			parent="main_simulator_price_menu" action="simulator_price_action"/>
	</data>
</odoo>